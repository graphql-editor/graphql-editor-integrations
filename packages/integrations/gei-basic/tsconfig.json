{
    "compilerOptions": {
        "skipLibCheck": true,
        "moduleResolution": "node",
        "target": "es2020",
        "module": "es2020",
        "declaration": true,
        "outDir": "./lib",
        "rootDir": "./src",
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}