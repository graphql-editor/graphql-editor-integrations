{
  "compilerOptions": {
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "composite": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
